<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1E1F22">

    <ImageButton
        android:id="@+id/btnHeadForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_up"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHeadStop"
        app:layout_constraintEnd_toEndOf="@+id/btnHeadStop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnHeadStop" />

    <ImageButton
        android:id="@+id/btnHeadRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_right"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnHeadStop"
        app:layout_constraintStart_toEndOf="@+id/btnHeadStop"
        app:layout_constraintTop_toTopOf="@+id/btnHeadStop"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnHeadLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_left"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnHeadStop"
        app:layout_constraintEnd_toStartOf="@+id/btnHeadStop"
        app:layout_constraintTop_toTopOf="@+id/btnHeadStop"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnHeadBackward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_down"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/btnHeadStop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnHeadStop"
        app:layout_constraintTop_toBottomOf="@+id/btnHeadStop" />

    <ImageButton
        android:id="@+id/btnHeadStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E1F22"
        android:src="@drawable/stop"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnForward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406"
        app:tint="#1E1F22" />

    <ImageButton
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_up"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnStop"
        app:layout_constraintEnd_toEndOf="@+id/btnStop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnStop" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_right"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnStop"
        app:layout_constraintStart_toEndOf="@+id/btnStop"
        app:layout_constraintTop_toTopOf="@+id/btnStop"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_left"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnStop"
        app:layout_constraintEnd_toStartOf="@+id/btnStop"
        app:layout_constraintTop_toTopOf="@+id/btnStop"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnBackward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/arrow_down"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/btnStop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnStop"
        app:layout_constraintTop_toBottomOf="@+id/btnStop" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FE225B6D"
        android:src="@drawable/stop"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#FE225B6D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1E1F22"
                android:text="Scan HC-06 Devices"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FE225B6D"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ListView
                android:id="@+id/bluetoothList"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:divider="#FE225B6D"
                android:dividerHeight="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="NestedWeights" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#1E1F22"
            android:padding="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtTextToSpeech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Enter Text to Speech" />

            <Button
                android:id="@+id/btnSpeak"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="#FE225B6D"
                android:text="Speak"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btnListen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="#FE225B6D"
                android:text="Listen"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1F22"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCommands"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:background="#FE225B6D"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="org.tensorflow.lite.examples.classification.CameraActivity">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1F22"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E1F22"
                android:paddingHorizontal="5dp"
                android:text="Mode"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/ModeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/manualRd"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:checked="true"
                    android:text="Manual"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/aiRd"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Automatic"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/conversationRd"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Conversation"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RadioGroup>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:background="#FE225B6D"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="5dp">

            <TextView
                android:id="@+id/tvCompassHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="#1E1F22"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="Heading: 0" />

            <ImageView
                android:id="@+id/ivCompassHeading"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/compass" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#1E1F22"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="5dp">


            <fragment
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1F22"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.119"
            tools:layout_editor_absoluteX="5dp">

            <TextView
                android:id="@+id/tvMapLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E1F22"
                android:text="Latitude: 0"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvMapLongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E1F22"
                android:text="Longitude: 0"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnAddWaypoint"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="#FE225B6D"
                android:text="View Waypoint"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:cornerRadius="0dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>